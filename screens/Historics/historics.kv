#:include components/Tab/tab.kv
#:include components/historic_card.kv

<HistoricScreen>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1

        MDLabel:
            text: "Histórico"
            halign: "center"
            font_size: "16sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            size_hint_y: None
            height: dp(50)
            padding: dp(10), dp(10)
            theme_text_color: "Custom"
            md_bg_color: app.theme_cls.primary_color

        MDTabs:
            id: tabs
            tab_bar_height: dp(48)
            background_color: app.theme_cls.bg_dark

            TabComponent:
                title: "Ontem"

                ScrollView:
                    do_scroll_x: False

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(10)
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height

                        MonthHeader:
                            text: ""

                        MDBoxLayout:
                            id: yesterday_content
                            orientation: "vertical"
                            spacing: dp(10)
                            adaptive_height: True
                            opacity: 1
                            disabled: False

            TabComponent:
                title: "Semanal"

                ScrollView:
                    do_scroll_x: False

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(10)
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height

                        MonthHeader:
                            text: ""

                        MDBoxLayout:
                            id: week_content
                            orientation: "vertical"
                            spacing: dp(10)
                            
                            adaptive_height: True
                            opacity: 1
                            disabled: False

            TabComponent:
                title: "Mensal"

                ScrollView:
                    do_scroll_x: False

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(10)
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height

                        MonthHeader:
                            text: "Novembro 2025"

                        MDBoxLayout:
                            id: month_content
                            orientation: "vertical"
                            spacing: dp(10) 
                            adaptive_height: True
                            opacity: 1
                            disabled: False

                            
                        MonthHeader:
                            text: "Outubro 2025"

                        MonthHeader:
                            text: "Setembro 2025"
                        
                        MonthHeader:
                            text: "Agosto 2025"

                        MonthHeader:
                            text: "Julho 2025"

                        MonthHeader:
                            text: "Junho 2025"

                        MonthHeader:
                            text: "Maio 2025"

                        MonthHeader:
                            text: "Abril 2025"

                        MonthHeader:
                            text: "Março 2025"

                        MonthHeader:
                            text: "Fevereiro 2025"

                        MonthHeader:
                            text: "Janeiro 2025"
                            

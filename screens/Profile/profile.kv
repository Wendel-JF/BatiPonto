<ProfileScreen@MDScreen>:

    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(25)
            size_hint: None, None
            size: dp(350), dp(200)
            pos_hint: {"center_x": .5, "center_y": .5}

            MDBoxLayout:
                orientation: "horizontal"
                spacing: dp(15)
                size_hint_y: None
                height: dp(120)

             
                RelativeLayout:
                    size_hint: None, None
                    size: dp(90), dp(90)

                    FitImage:
                        id: profile_image
                        source: "assets/default_user.png"
                        size_hint: None, None
                        size: dp(90), dp(90)
                        radius: [45, 45, 45, 45]

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: dp(5)
                    valign: "center"

                    MDLabel:
                        id: profile_name
                        text: "Nome do Usu√°rio"
                        font_style: "H6"
                        halign: "left"
                        text_color: app.theme_cls.opposite_text_color if app.theme_cls.theme_style == "Dark" else app.theme_cls.text_color

                    MDLabel:
                        id: profile_email
                        text: "email@exemplo.com"
                        font_style: "Body2"
                        halign: "left"
                        text_color: app.theme_cls.opposite_text_color if app.theme_cls.theme_style == "Dark" else app.theme_cls.text_color

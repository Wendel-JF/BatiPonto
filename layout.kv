BoxLayout:
    orientation: "vertical"
    size_hint: 1, 1

    # Conteúdo principal (ocupa todo o espaço disponível)
    BoxLayout:
        id: screen_container
        orientation: "vertical"
        size_hint_y: 1

    # Contêiner fixo para a barra de navegação
    BoxLayout:
        id: nav_container
        size_hint_y: None
        opacity: 0          # <--- COMEÇA OCULTO
        disabled: True      # <--- NÃO CLICÁVEL
        
        MDBottomNavigation:
            id: bottom_nav
            theme_text_color: "Custom"
            text_color_active: app.theme_cls.accent_color

            MDBottomNavigationItem:
                name: "home"
                text: "Início"
                icon: "home"
                text_color: app.text_color
                on_tab_press: app.on_switch_tabs("home")

            MDBottomNavigationItem:
                name: "historic"
                text: "Histórico"
                icon: "clock-time-two-outline"
                on_tab_press: app.on_switch_tabs("historic")

            MDBottomNavigationItem:
                name: "settings"
                text: "Configurações"
                icon: "cog"
                on_tab_press: app.on_switch_tabs("settings")

            MDBottomNavigationItem:
                name: "profile"
                text: "Perfil"
                icon: "account"
                on_tab_press: app.on_switch_tabs("profile")

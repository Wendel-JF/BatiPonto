#:import colors kivymd.color_definitions.colors

<NavBar@BoxLayout>:
    orientation: "vertical"
    md_bg_color: app.theme_cls.bg_normal
    size_hint_y: None
    height: "48dp"

    MDScreenManager:
        id: screen_manager

        MDScreen:
            name: "Screen1"
            MDLabel:
                text: "Conteúdo da Tela 1"
                halign: "center"
           
        MDScreen:
            name: "Screen2"
            MDLabel:
                text: "Conteúdo da Tela 2"
                halign: "center"

    MDBottomNavigation:
        id: bottom_nav
        text_color_active: colors["Blue"]["700"]
        text_color_normal: colors["Gray"]["500"]
        panel_color: app.theme_cls.bg_dark

        MDBottomNavigationItem:
            name: "screen1"
            text: "inicio"
            icon: "home"
            on_tab_press: app.on_switch_tabs(self.name)
        MDBottomNavigationItem:
            name: "screen1"
            text: "Historicos"
            icon: "clock-time-two-outline"
            on_tab_press: app.on_switch_tabs(self.name)

        MDBottomNavigationItem:
            name: "screen1"
            text: "Configuraçôes"
            icon: "cog"
            on_tab_press: app.on_switch_tabs(self.name)

        MDBottomNavigationItem:
            name: "screen2"
            text: "Perfil"
            icon: "account"
            on_tab_press: app.on_switch_tabs(self.name)

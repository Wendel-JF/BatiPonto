<LoginInput@BoxLayout>:
    orientation: "vertical"
    spacing: 20
    padding: 20
    size_hint_y: None
    height: self.minimum_height

    MDTextField:
        id: username
        hint_text: "email@dominio.com"
        icon_right: "account"
        size_hint_x: 0.8
        height: "48dp"
        pos_hint: {"center_x": 0.5}
        size_hint_y: None

    MDTextField:
        id: password
        hint_text: "Senha"
        password: True
        icon_right: "lock"
        size_hint_x: 0.8
        height: "48dp"
        pos_hint: {"center_x": 0.5}
        size_hint_y: None

    MDRaisedButton:
        text: "Coninuar"
        size_hint_x: 0.8
        height: "48dp"
        pos_hint: {"center_x": 0.5}
        size_hint_y: None

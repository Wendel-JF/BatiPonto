<PontoCard>:
    size_hint: 1, None
    height: dp(80)
    padding: dp(15)
    radius: [12]
    elevation: 1
    md_bg_color: root.bgcolor

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(5)

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(40)

            MDLabel:
                text: f"{root.data} - {root.dia_semana}"
                font_size: "16sp"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                adaptive_size: True
                pos_hint: {"center_y": 0.5}

        MDLabel:
            text: f"{root.p1}  |  {root.p2}  |  {root.p3}  |  {root.p4}"
            font_size: "16sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            #bold: True
            adaptive_size: True
            pos_hint: {"center_y": 0.5}
            
